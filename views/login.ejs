<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8 one">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="myInput" class="form-control" name="password" minlength="6" required>
              <input type="checkbox" onclick="myFunction()"> Show Password
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign Up with FaceBook
          </a>
        </div>
      </div>
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-linkedin" href="/auth/linkedin" role="button">
            <i class="fab fa-linkedin"></i>
            Sign Up with linkedin
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>